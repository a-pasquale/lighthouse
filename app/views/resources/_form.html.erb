<%= form_for [@user, @resource], html: { class: "col s12 new-resource", multipart: true } do |f| %>

  <div class="row">
    <div class="input-field col s12 m9 l5">
      <%= f.text_field :title %>
      <%= f.label :title %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 m9 l5">
      <%= f.url_field :link %>
      <%= f.label :link %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 m9 l5">
      <%= f.text_area :description, placeholder: '200 characters maximum', 
        length: "200", class: "materialize-textarea resize-vertical" %>
      <%= f.label :description %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 m9 l5 category-autocomplete">
      <%= f.text_field :category %>
      <%= f.label :category %>
    </div>
  </div>


  <div>
    <%= content_tag :button, "Save", type: :submit, class: "waves-effect waves-light btn teal" %>
    <%= link_to 'Delete', [@resource.user, @resource], method: :delete, 
      class: "waves-effect waves-light btn red" unless @resource.new_record? %>
  </div>
<% end %>
