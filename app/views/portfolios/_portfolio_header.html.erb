<section id="header">
  <div class="header-bg-wrapper">
    <div class="header-bg">

      <%= link_to fa_icon("cog", text: "Edit", right: true), edit_user_path(@user), class: "student-edit"%>

      <div class="container">
        
        <div class="row valign-wrapper">
          <div class="col s6 m3 l3 valign-wrapper">
            <div class="student-avatar valign">
              <%= image_tag @user.avatar.url, class: "responsive-img" %>
            </div>
          </div>

          <div class="col s6 m9 l9">
            <div class="row">
              <div class="col s12">
                <h2 class="cyan-text text-lighten-2"><%= @user.full_name %></h2>   
              </div>
              <div class="col s12 hide-on-small-only">
                <span class="white-text thin med-opacity"><%= @user.description.capitalize %></span>
              </div>
            </div>
            <div class="social-media row hide-on-small-only">
              <% if @user.tumblr.present? %>
              <div class="col s4 m4 l4">
                <span class="white-text thin med-opacity truncate">
                  <%= link_to fa_icon("tumblr", text: @user.tumblr_handle), @user.tumblr %>
                </span>
              </div>
              <% end %>
              <% if @user.twitter.present? %>
              <div class="col s4 m4 l4">
                <span class="white-text thin med-opacity truncate">
                  <%= link_to fa_icon("twitter", text: @user.twitter_handle), @user.twitter %>
                </span>
              </div>
              <% end %>
              <% if @user.instagram.present? %>
              <div class="col s4 m4 l4">
                <span class="white-text thin med-opacity truncate">
                  <%= link_to fa_icon("instagram", text: @user.instagram_handle), @user.instagram %>
                </span>
              </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="row">
            <div class="social-media row hide-on-med-and-up">
              <% if @user.tumblr.present? %>
              <div class="col s4 m4 l4 center-align">
                <span class="white-text medium med-opacity">
                  <%= link_to fa_icon("tumblr"), @user.tumblr %>
                </span>
              </div>
              <% end %>
              <% if @user.twitter.present? %>
              <div class="col s4 m4 l4 center-align">
                <span class="white-text medium med-opacity">
                  <%= link_to fa_icon("twitter"), @user.twitter %>
                </span>
              </div>
              <% end %>
              <% if @user.instagram.present? %>
              <div class="col s4 m4 l4 center-align">
                <span class="white-text medium med-opacity">
                  <%= link_to fa_icon("instagram"), @user.instagram %>
                </span>
              </div>
              <% end %>
            </div>
          </div>

      </div>
    </div>
  </div>
</section>