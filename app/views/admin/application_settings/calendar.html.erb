<nav>
  <div class='nav-wrapper'>
    <span class='breadcrumb'>Class Calendar</span>
    <%= link_to 'Source Calendar', application_settings.calendar_url, class: 'btn right', target: '_blank', style: 'position:absolute;top:12px;right:0px;' if application_settings.calendar_url.present? %>
  </div>
</nav>

<% unless application_settings.hide_week_view %>
  <ul class='tabs tabs-fixed-width z-depth-1'>
    <li class='tab col s6'><a href='#week-calendar'>Week</a></li>
    <li class='tab col s6'><a href='#agenda-calendar'>Agenda</a></li>
  </ul>
<% end %>

<section class='section-container' id='agenda-calendar'></section>

<% unless application_settings.hide_week_view %>
  <section id='week-calendar'>
    <%= react_component 'Week', { calendarId: application_settings.calendar_id } %>
  </section>
<% end %>

<div id='calendar-id' style='display: none;' data-calendar-id="<%= application_settings.calendar_id %>"></div>
