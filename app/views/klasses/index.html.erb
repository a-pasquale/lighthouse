<nav>
  <div class="nav-wrapper">
    <div class="brand-logo">
      <%= link_to "Admin Dashboard", admin_dashboard_path, class: "bc" %>
      &nbsp;
      <%= fa_icon "angle-double-right", class: "no-padding bc", text: "Manage Classes" %>
    </div>
  </div>
</nav>

<section id="class" class="section-container">

  <% if @klasses.empty? %>
    <h3>No classes currently exist.</h3>
    <%= link_to "Create one", new_klass_path, class: "btn wave cyan lighter-2" %>
  <% else %>

  <div class="row grey-text text-darken-2">

    <div class="input-field col s12 m5">
      <%= fa_icon "search", class: "prefix" %>
      <input id="class-search" class="search" type="text" />
      <label for="class-search">Search</label>
    </div>

    <div class="input-field col s12 m2">

      <select class="filter-year">
        <option value="present" disabled selected>YEAR</option>
        <option value="present">2015</option>
        <option value="previous">2016</option>
      </select>

    </div>

    <div class="input-field col s12 m2">
      <select class="filter-season">
        <option value="present" disabled selected>SEASON</option>
        <option value="present">ALL</option>
        <option value="present">FALL</option>
        <option value="previous">WINTER</option>
      </select>
    </div>

    <div class="input-field col s12 m3">
      <%= link_to new_klass_path, class: "btn" do %>
        <%= fa_icon("plus", text: "Create", class: "no-padding") %>
      <% end %>
    </div>
  </div>

  <% end %>

  <table class="bordered z-depth-1">
    <thead class="grey darken-4 white-text">
      <tr>
        <th class="name-desc">CLASS AND DESCRIPTION</th>
        <div class="hide-on-small-only">
        <th class="hide-on-small-only">INSTRUCTOR</th>
        <th class="hide-on-small-only">TIME</th>
        <th class="hide-on-small-only"># OF STUDENTS</th>
        </div>
      </tr>
    </thead>

    <tbody>

      <% @klasses.each do |klass| %>

      <tr>
        <td class="name-desc">
          <div class="name">
            <%= klass.google_drive_url.blank? ? klass.name : link_to(klass.name, klass.google_drive_url) %>
            <small><%= link_to fa_icon("pencil"), edit_klass_path(klass) %></small>
            <small><%= link_to fa_icon("trash"), klass, method: :delete, data: { confirm: 'Are you positive that you want to delete this class?' } %></small>
          </div>
          <%= klass.description %>
        </td>
        <td class="hide-on-small-only"><%= klass.instructor %></td>
        <td class="hide-on-small-only"><%= klass.weekday %> <br/> <%= klass.time %> </td>
        <td class="hide-on-small-only">34</td>
      </tr>
      <% end %>

    </tbody>
  </table>


</section>