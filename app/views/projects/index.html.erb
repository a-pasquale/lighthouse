<%= render 'header' %>

<section class="section-container no-padding">

<div class="row">
    <ul class="tabs">
      <li class="tab col s6"><a href="#portfolio-piece-grid">Portfolio</a></li>
      <li class="tab col s6"><a href="#resume">Resume</a></li>
    </ul>
</div>

  <div id="portfolio-piece-grid" data-columns class="row">

    <div class="col s12">
      <div class="card-panel project-wrapper hoverable">
        <div class="card-content">
          <%= link_to "", new_user_project_path, class: "project-link" %>
          <div class="add-project">
            <%= link_to fa_icon("plus-circle"), new_user_project_path %>
            <br><br>Add portfolio piece
          </div>
        </div>
      </div>
    </div>
    
    <% @projects.each do |project| %>
      <div class="col s12">
        <div class="card project-wrapper hoverable">
          <div class="card-image">
            <%= image_tag project.photo if project.photo.present? %>
          </div>
          <div class="card-content">
            <span class="card-title black-text truncate"><%= project.title %></span>
            <p class="grey-text truncate">
            <%= project.date_completed.strftime("%d %B, %Y") %> 
            </p>  
          </div>
          <%= link_to "", user_project_path(@user, project), class: "project-link", title: project.title %>
        </div>
      </div>
    <% end %>

  </div>

  <div id="resume" class="container">
    <h2>Nothing here yet.</h2>
    <%= link_to "Get Started", "#", class: "btn wave cyan lighter-2" %>
  </div>

</section>
