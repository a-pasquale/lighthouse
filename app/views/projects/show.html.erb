<section class="section-container no-padding">

  <div class="row">

    <div class="col m1 hide-on-small-only portfolio-piece-nav">
      <%= link_to fa_icon("angle-left", text: "Previous"), [@project.user, @project.previous], class: "nav-left" %>
    </div>

    <div class="col s12 m10 portfolio-piece-content">
      <div class="container">
       
        <%= link_to fa_icon("pencil"), edit_user_project_path(@project.user, @project), 
          class: "btn-floating btn-large waves-effect waves-light teal right" %> 

        <h1 class="center-align thick"><%= @project.title %></h1>

        <hr>

        <div class="center-align thin teal-text">
          <%= @project.date_completed.strftime("%B %d, %Y / ") if @project.date_completed.present? %>
          <%= " In <span class=\"normal\">#{@project.location}</span> / ".html_safe if @project.location.present? %>
          <%= " By <span class=\"normal\">#{@project.user.full_name}</span>".html_safe %>
        </div>

        <br><br>

        <div class="center-align flow-text">
          <i><%= @project.description %></i>
        </div>

        <% if @project.photo.present? %>
          <div class="show-display-image">
            <%= image_tag @project.photo.url, class: "responsive-img materialboxed" %>
          </div>
        <% end %>

