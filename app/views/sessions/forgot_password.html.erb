<h2 class='center-align'>Forgot your password</h2>

<%= form_tag forgot_password_path, style: 'max-width: 500px; margin: 0 auto' do %>

<div class='row'>
  <div class='input-field col s12'>
    <%= text_field_tag :email, '', autofocus: true %>
    <%= label_tag :email, 'Email' %>
  </div>
</div>

<div class='center-align'>
  <%= content_tag :button, 'Send Reset Instructions', type: :submit, class: 'waves-effect waves-light btn-large' %>
</div>

<% end %>
