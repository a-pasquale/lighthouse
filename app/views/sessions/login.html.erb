<section id="home-1">

  <h1 class="center-align grey-text text-lighten-5">
    Compass<br><small>Centre for Self-Directed Learning</small>
  </h1>

  <div id="login-signup-container">

    <%= form_for @user, url: login_authentication_path, html: {method: "post", class: "col s12", autocomplete: "off" } do |f| %>

    <input type="text" style="display:none;">
    <input type="password" style="display:none;">

      <div class="row">
        <div class="input-field">
          <%= f.text_field :email, autofocus: true %>
          <%= f.label :email %>
        </div>
      </div>

      <div class="row">
        <div class="input-field">
          <%= f.password_field :password %>
          <%= f.label :password %>
        </div>
      </div>

      <% if flash[:alert] %>
        <div class="login-refused"><%= flash[:alert] %></div>
      <% end %>

      <%= content_tag :button, "Submit",type: :submit, class: "waves-effect waves-light btn login-submit" %>

    <% end %>
  </div>
</section>
